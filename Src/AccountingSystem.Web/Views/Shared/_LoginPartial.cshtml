@using AccountingSystem.Core.Extention
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello  @User.Identity.GetDisplayName()<i class="fa fa-caret-down fa-pad-left"></i></a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Index", "User")"><i class="fa fa-fw fa-edit fa-pad-right"></i>My Stock Codes</a></li>
                <li><a href="@Url.Action("SetPassword", "User")"><i class="fa fa-fw fa-lock fa-pad-right"></i>Change Password</a></li>
                
            </ul>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
